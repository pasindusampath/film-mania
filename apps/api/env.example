# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL connection settings

# Database Host
DB_HOST=localhost

# Database Port
DB_PORT=5432

# Database Name (change per environment)
# Development: film_mania_dev
# QA: film_mania_qa
# Staging: film_mania_staging
# Production: film_mania_prod
DB_NAME=film_mania_dev

# Database User
# Note: Use DB_USERNAME (not DB_USER) to match the application config
DB_USERNAME=postgres

# Database Password
DB_PASSWORD=postgres

# Alternative: Database URL (overrides individual settings)
# Format: postgres://username:password@host:port/database
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/film_mania_dev

# ============================================
# Environment-Specific Examples
# ============================================

# DEVELOPMENT
# NODE_ENV=development
# DB_NAME=film_mania_dev
